{% import _self as macros %}

{% set scope = {
   phone: '+7 (900) 900-90-90',
   email: 'info@gmail.com',
   location: 'г. Владивосток <br> ул. Выселковая 49, стр. 3',
   icons: {
      phone: ('icons/phone' ~ (alternativeIcon ? '' : '-w') ~ '.svg')|asset,
      email: ('icons/email' ~ (alternativeIcon ? '' : '-w') ~ '.svg')|asset,
      location: ('icons/loc' ~ (alternativeIcon ? '' : '-w') ~ '.svg')|asset,
   },
} %}

{% macro content(scope) %}

   <div class="ContactsSection">
      <p class="ContactsSection__item">
         <a class="ContactsItem" href="tel:{{ scope.phone }}">
            <img
               src="{{ scope.icons.phone }}"
               width="24"
               height="14"
               alt="Phone"
               class="ContactsItem__icon"
            >
            {{ scope.phone }}
         </a>
      </p>

      <p class="ContactsSection__item">
         <a class="ContactsItem" href="email:{{ scope.email }}">
            <img
               src="{{ scope.icons.email }}"
               width="24"
               height="14"
               alt="Email"
               class="ContactsItem__icon"
            >
            {{ scope.email }}
         </a>
      </p>

      <p class="ContactsSection__item">
         <span class="ContactsItem">
            <img
               src="{{ scope.icons.location }}"
               width="24"
               height="14"
               alt="Loc"
               class="ContactsItem__icon"
            >
            {{ scope.location|raw }}
         </span>
      </p>
   </div>

{% endmacro %}

{{ macros.content(scope) }}