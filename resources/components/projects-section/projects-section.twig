{% import _self as macros %}

{% set scope = {
    items: items ?? [],
} %}

{% macro content(scope) %}
   <section class="ProjectsSection">
      <h2 class="ProjectsSection__title">
         Реализованные проекты
      </h2>

      <div class="ProjectsSection__container">
         {% for project in scope.items %}
            <div class="ProjectsSection__item">
               <div class="ProjectsSection__textBlock">
                  <h4 class="ProjectsSection__itemTitle">
                     {{ project.title }}
                  </h4>

                  <p class="ProjectsSection__itemDescription">
                     {{ project.description|nl2br }}
                  </p>
               </div>

               <img
                  class="ProjectsSection__imageBlock"
                  src="{{ project.image }}"
                  alt="{{ project.title }}"
               >
            </div>
         {% endfor %}
      </div>
   </section>
{% endmacro %}

{{ macros.content(scope) }}